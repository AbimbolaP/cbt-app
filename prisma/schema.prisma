generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Question {
  id        Int @id @default(autoincrement())
  primary   String
  option1   String
  option2   String
  option3   String
  option4   String
  answer    String
}

model User {
  id          Int @id @default(autoincrement())
  name        String?
  email       String @unique
  password    String
  role        Role  @default(STUDENT)
  score       Int?

  pendingAdmin Boolean @default(false)
  adminConfirmToken String? @unique
}

enum Role {
  STUDENT
  ADMIN
}