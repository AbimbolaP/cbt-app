generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Question {
  id      Int    @id @default(autoincrement())
  primary String
  option1 String
  option2 String
  option3 String
  option4 String
  answer  String
}
